extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add a new line - Group Service

  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/mycv", method="get", role="form")

        .form-group
          label.col-sm-2.control-label(for="committee") Group:
          .col-sm-10
            input#committee.form-control(type="text", name="committee")

        .form-group
          label.col-sm-2.control-label(for="public-host") Role:
          .col-sm-10
            input#role.form-control(type="text", name="role")

        .form-group
          label.col-sm-2.control-label(for="start-year") Year began:
          .col-sm-10
            input#start-year.form-control(type="text", name="start-year", placeholder='2009')

        .form-group
          label.col-sm-2.control-label(for="end-year") Year ended:
          .col-sm-10
            input#end-year.form-control(type="text", name="end-year", placeholder='present')

        .form-group
          label.col-sm-2.control-label(for="invited") Invited:
          .col-sm-10
            input#invited.input-group-addon(type="radio", name="invited", value="1", checked=invited=="yes") 
            | &nbsp;Yes&nbsp; 
            input#invited.input-group-addon(type="radio", name="invited", value="0", checked=invited=="no") 
            | &nbsp;&nbsp;No

        .form-group
          label.col-sm-2.control-label(for="tags") Tags:
          .col-sm-10
            input#tags.form-control(type="text", name="tags")

        button.btn.btn-default.pull-right Add my line
      .col-xs-12.col-md-4