extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add a new line - Language

  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/mycv", method="get", role="form")
        .form-group
          label.col-sm-2.control-label(for="language") 
            span.glyphicon.glyphicon-plus-sign 
            | &nbsp;Language:
          .col-sm-10
            input#language.form-control(type="text", name="language")

        .form-group
          label.col-sm-2.control-label(for="proficiency") Proficiency:
          .col-sm-10
            input#proficiency.form-control(type="text", name="proficiency")

        button.btn.btn-default.pull-right Add my line
      .col-xs-12.col-md-4