extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add a new line

  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/mycv", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="type") Select Type
          .col-md-10.col-md-4
            select.form-control.input-sm(name="type")
              option education
              option publication
              option presentation
              option appointment
              option grant
              option service
              option affiliation
              option languages
              option technical skills
        button.btn.btn-default.pull-right Add my line
      .col-xs-12.col-md-4