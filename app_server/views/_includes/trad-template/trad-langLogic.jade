mixin languagesOutput

  if cv.languages
    .row
      .col-xs-12.col-sm-3
        h2.left-heading Languages

      .col-xs-12.col-sm-9
        ul.cvline.right-sub-list-item
          each l in cv.languages
              li 
                if l.language
                  | #{l.language} (#{l.fluency})
  -if (typeof cv.affiliations !== "undefined") {
    hr
  -}