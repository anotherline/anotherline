                  -if (g == gra.length-1) {
                    | and #{gra[g]}
                  -}
                  -else {
                    | #{gra[g]}, 
                  -}
                -}
              -}
          li    
            if p.office
              b Office: 
              -var off = p.office
              -if (off.length-1 == 1) {
                  | #{off[0]} and #{off[1]}
              -}
              -else {
                -for (var o = 0; o <= off.length-1; o++) {
                  -if (o == off.length-1) {
                    | and #{off[o]}
                  -}
                  -else {
                    | #{off[o]}, 
                  -}
                -}
              -}