mixin proficienciesOutput

  #my-proficiencies-cred-child1.inner-child
    ul#proficiencies-info.striped
      each p in cv.proficiencies
          li 
            if p.audio
              b Audio: 
              -var aud = p.audio
              -if (aud.length-1 == 1) {
                  | #{aud[0]} and #{aud[1]}
              -}
              -else {
                -for (var a = 0; a <= aud.length-1; a++) {
                  -if (a == aud.length-1) {
                    | and #{aud[a]}
                  -}
                  -else {
                    | #{aud[a]}, 
                  -}
                -}
              -}
          li    
            if p.video
              b Video: 
              -var vid = p.video
              -if (vid.length-1 == 1) {
                  | #{vid[0]} and #{vid[1]}
              -}
              -else {
                -for (var v = 0; v <= vid.length-1; v++) {
                  -if (v == vid.length-1) {
                    | and #{vid[v]}
                  -}
                  -else {
                    | #{vid[v]}, 
                  -}
                -}
              -}
          li    
            if p.graphics
